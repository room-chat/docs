{
  "openapi": "3.0.2",
  "info": {
    "title": "API room-chat",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [
    {
      "description": "",
      "name": "User"
    }
  ],
  "paths": {
    "/user-information/{email}": {
      "get": {
        "description": "the api get information specific user",
        "tags": ["User"],
        "parameters": [
          {
            "required": true,
            "name": "email",
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserInformationRes"
                }
              }
            }
          },
          "400": {
            "description": "The error occur",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequest"
                }
              }
            }
          },
          "404": {
            "description": "The use not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFound"
                }
              }
            }
          },
          "500": {
            "description": "The Serve is broker",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServer"
                }
              }
            }
          }
        }
      }
    },
    "/authorized-user": {
      "post": {
        "description": "the api get information specific user",
        "tags": ["User"],
        "requestBody": {
          "$ref": "#/components/requestBodies/GetUserBodyRequest"
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserAuthorizedRes"
                }
              }
            }
          },
          "400": {
            "description": "The error occur",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequest"
                }
              }
            }
          },
          "404": {
            "description": "The use not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFound"
                }
              }
            }
          }
        }
      }
    },
    "/create-user": {
      "post": {
        "description": "the api get information specific user",
        "tags": ["User"],
        "requestBody": {
          "$ref": "#/components/requestBodies/CreateUserBodyRequest"
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "example": "200"
                    },
                    "message": {
                      "type": "string",
                      "example": "Success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "example": "example@example.com"
                        }
                      }
                    }
                  },
                  "required": ["code", "message"]
                }
              }
            }
          },
          "400": {
            "description": "The Error Occur",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequest"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServer"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "parameters": {},
    "requestBodies": {
      "GetUserBodyRequest": {
        "description": "User body request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "ExampleUser@example.com"
                }
              },
              "required": ["email"]
            }
          }
        },
        "required": true
      },
      "CreateUserBodyRequest": {
        "description": "Create User body request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "ExampleUser"
                },
                "firstName": {
                  "type": "string",
                  "example": "firstName"
                },
                "lastName": {
                  "type": "string",
                  "example": "lastName"
                },
                "password": {
                  "type": "string",
                  "example": "password"
                },
                "dayOfBirth": {
                  "type": "string",
                  "example": "1996-12-21"
                },
                "address": {
                  "type": "string",
                  "example": "Russia"
                },
                "city": {
                  "type": "string",
                  "example": "Moskva"
                }
              },
              "required": ["email", "password"]
            }
          }
        },
        "required": true
      }
    },
    "schemas": {
      "NotFound": {
        "description": "Result when not found any data",
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "404"
          },
          "message": {
            "type": "string",
            "example": "Not Found"
          }
        },
        "required": ["code", "message"]
      },
      "BadRequest": {
        "description": "Result when error occur",
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "400"
          },
          "message": {
            "type": "string",
            "example": "Bad Request"
          }
        },
        "required": ["code", "message"]
      },
      "InternalServer": {
        "description": "Result when server have error",
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "500"
          },
          "message": {
            "type": "string",
            "example": "Internal Server"
          }
        },
        "required": ["code", "message"]
      },
      "Unauthorized": {
        "description": "The user don't have permission",
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "401"
          },
          "message": {
            "type": "string",
            "example": "Unauthorized"
          }
        },
        "required": ["code", "message"]
      },
      "UserInformationRes": {
        "description": "Body object of User",
        "type": "object",
        "properties": {
          "userId": {
            "description": "The userId show number of user",
            "type": "number",
            "example": 1
          },
          "email": {
            "description": "The accountName show name of user",
            "type": "string",
            "example": "ExampleUser@example.com"
          },
          "dayOfBirth": {
            "description": "The dayOfBirth show day of birth user",
            "type": "string",
            "example": "1998-04-02"
          },
          "address": {
            "description": "show address of user",
            "type": "string",
            "example": "02 Hoang Hoa Tham"
          },
          "city": {
            "description": "show the city user live",
            "type": "string",
            "example": "Da nang"
          },
          "firstName": {
            "description": "show first name user",
            "type": "string",
            "example": "John"
          },
          "lastName": {
            "description": "show last name user",
            "type": "string",
            "example": "Walker"
          }
        },
        "required": ["userId", "accountName"]
      },
      "UserAuthorizedRes": {
        "description": "Body object of User",
        "type": "object",
        "properties": {
          "userId": {
            "description": "The userId show number of user",
            "type": "number",
            "example": 1
          },
          "email": {
            "description": "The accountName show name of user",
            "type": "string",
            "example": "ExampleUser@example.com"
          },
          "password": {
            "description": "The password of user",
            "type": "string",
            "example": "password"
          }
        },
        "required": ["userId", "email", "password"]
      }
    }
  }
}
